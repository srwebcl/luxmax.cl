<script>
    import { gsap } from "gsap";

    const toggleBtn = document.getElementById("whatsapp-toggle");
    const menu = document.getElementById("whatsapp-menu");
    let isOpen = false;

    // Pulse/Shake Loop
    gsap.to(toggleBtn, {
        scale: 1.1,
        duration: 0.5,
        repeat: -1,
        yoyo: true,
        ease: "sine.inOut",
        repeatDelay: 2,
    });

    toggleBtn?.addEventListener("click", () => {
        isOpen = !isOpen;
        if (isOpen) {
            menu?.classList.remove(
                "translate-y-10",
                "opacity-0",
                "pointer-events-none",
            );
            menu?.classList.add(
                "translate-y-0",
                "opacity-100",
                "pointer-events-auto",
            );

            // Stagger reveal menu items
            gsap.fromTo(
                menu?.children,
                { y: 20, opacity: 0 },
                {
                    y: 0,
                    opacity: 1,
                    duration: 0.4,
                    stagger: 0.1,
                    ease: "back.out",
                },
            );

            // Stop pulse when open
            gsap.killTweensOf(toggleBtn);
            gsap.to(toggleBtn, { scale: 1, rotation: 45, duration: 0.3 });
        } else {
            menu?.classList.add(
                "translate-y-10",
                "opacity-0",
                "pointer-events-none",
            );
            menu?.classList.remove(
                "translate-y-0",
                "opacity-100",
                "pointer-events-auto",
            );

            // Restart pulse
            gsap.to(toggleBtn, { rotation: 0, duration: 0.3 });
            gsap.to(toggleBtn, {
                scale: 1.1,
                duration: 0.5,
                repeat: -1,
                yoyo: true,
                ease: "sine.inOut",
                repeatDelay: 2,
                delay: 0.3,
            });
        }
    });

    // Close when clicking outside
    document.addEventListener("click", (e) => {
        if (
            !toggleBtn?.contains(e.target as Node) &&
            !menu?.contains(e.target as Node) &&
            isOpen
        ) {
            isOpen = false;
            menu?.classList.add(
                "translate-y-10",
                "opacity-0",
                "pointer-events-none",
            );
            menu?.classList.remove(
                "translate-y-0",
                "opacity-100",
                "pointer-events-auto",
            );

            gsap.to(toggleBtn, { rotation: 0, duration: 0.3 });
            gsap.to(toggleBtn, {
                scale: 1.1,
                duration: 0.5,
                repeat: -1,
                yoyo: true,
                ease: "sine.inOut",
                repeatDelay: 2,
            });
        }
    });
</script>
