<section class="py-24 bg-slate-50 relative overflow-hidden" id="servicios">
    <!-- Decorative Background Elements -->
    <div
        class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none"
    >
        <div
            class="absolute -left-10 top-20 w-72 h-72 bg-blue-500/5 rounded-full blur-3xl"
        >
        </div>
        <div
            class="absolute right-0 bottom-20 w-96 h-96 bg-orange-500/5 rounded-full blur-3xl"
        >
        </div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <h2
            class="text-4xl md:text-5xl font-black text-center text-slate-800 mb-16 service-header tracking-tight"
        >
            ¿Qué reparamos en <span
                class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500"
                >Lux Max</span
            >?
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
            <!-- Card 1: Lavado -->
            <div
                class="group service-card bg-white rounded-3xl p-8 md:p-10 border border-slate-100 shadow-xl shadow-slate-200/50 hover:shadow-2xl hover:shadow-blue-500/10 hover:-translate-y-2 transition-all duration-500 relative overflow-hidden"
            >
                <div
                    class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-blue-500/10 to-transparent rounded-bl-full -mr-8 -mt-8 transition-transform group-hover:scale-110"
                >
                </div>

                <div
                    class="w-20 h-20 bg-blue-50 text-blue-600 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 group-hover:rotate-3 transition-all duration-500 shadow-sm"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-10 w-10"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"
                        ></path>
                    </svg>
                </div>

                <h3
                    class="text-3xl font-bold text-slate-800 mb-6 group-hover:text-blue-600 transition-colors"
                >
                    Lavadoras y Secadoras
                </h3>

                <ul class="space-y-4">
                    <li
                        class="flex items-start gap-3 text-slate-600 group-hover:text-slate-700 transition-colors"
                    >
                        <div
                            class="mt-1 w-5 h-5 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                class="w-3 h-3 text-blue-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="3"
                                    d="M5 13l4 4L19 7"></path></svg
                            >
                        </div>
                        <span class="text-lg"
                            >Fallas de centrifugado y ropa mojada.</span
                        >
                    </li>
                    <li
                        class="flex items-start gap-3 text-slate-600 group-hover:text-slate-700 transition-colors"
                    >
                        <div
                            class="mt-1 w-5 h-5 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                class="w-3 h-3 text-blue-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="3"
                                    d="M5 13l4 4L19 7"></path></svg
                            >
                        </div>
                        <span class="text-lg"
                            >Ruidos fuertes y vibración excesiva.</span
                        >
                    </li>
                    <li
                        class="flex items-start gap-3 text-slate-600 group-hover:text-slate-700 transition-colors"
                    >
                        <div
                            class="mt-1 w-5 h-5 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                class="w-3 h-3 text-blue-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="3"
                                    d="M5 13l4 4L19 7"></path></svg
                            >
                        </div>
                        <span class="text-lg">Errores digitales en panel.</span>
                    </li>
                    <li
                        class="flex items-start gap-3 text-slate-600 group-hover:text-slate-700 transition-colors"
                    >
                        <div
                            class="mt-1 w-5 h-5 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                class="w-3 h-3 text-blue-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="3"
                                    d="M5 13l4 4L19 7"></path></svg
                            >
                        </div>
                        <span class="text-lg"
                            >Secadoras que no calientan (Gas/Eléctricas).</span
                        >
                    </li>
                </ul>
            </div>

            <!-- Card 2: Cocina -->
            <div
                class="group service-card bg-white rounded-3xl p-8 md:p-10 border border-slate-100 shadow-xl shadow-slate-200/50 hover:shadow-2xl hover:shadow-orange-500/10 hover:-translate-y-2 transition-all duration-500 relative overflow-hidden"
            >
                <div
                    class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-orange-500/10 to-transparent rounded-bl-full -mr-8 -mt-8 transition-transform group-hover:scale-110"
                >
                </div>

                <div
                    class="w-20 h-20 bg-orange-50 text-orange-600 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 group-hover:rotate-3 transition-all duration-500 shadow-sm"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-10 w-10"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"
                        ></path>
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"
                        ></path>
                    </svg>
                </div>

                <h3
                    class="text-3xl font-bold text-slate-800 mb-6 group-hover:text-orange-600 transition-colors"
                >
                    Cocinas y Encimeras
                </h3>

                <ul class="space-y-4">
                    <li
                        class="flex items-start gap-3 text-slate-600 group-hover:text-slate-700 transition-colors"
                    >
                        <div
                            class="mt-1 w-5 h-5 rounded-full bg-orange-100 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                class="w-3 h-3 text-orange-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="3"
                                    d="M5 13l4 4L19 7"></path></svg
                            >
                        </div>
                        <span class="text-lg"
                            >Destape y regulación de inyectores (Gas).</span
                        >
                    </li>
                    <li
                        class="flex items-start gap-3 text-slate-600 group-hover:text-slate-700 transition-colors"
                    >
                        <div
                            class="mt-1 w-5 h-5 rounded-full bg-orange-100 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                class="w-3 h-3 text-orange-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="3"
                                    d="M5 13l4 4L19 7"></path></svg
                            >
                        </div>
                        <span class="text-lg"
                            >Reparación de chisperos y termocuplas.</span
                        >
                    </li>
                    <li
                        class="flex items-start gap-3 text-slate-600 group-hover:text-slate-700 transition-colors"
                    >
                        <div
                            class="mt-1 w-5 h-5 rounded-full bg-orange-100 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                class="w-3 h-3 text-orange-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="3"
                                    d="M5 13l4 4L19 7"></path></svg
                            >
                        </div>
                        <span class="text-lg"
                            >Cambio de platos eléctricos y conmutadores.</span
                        >
                    </li>
                    <li
                        class="flex items-start gap-3 text-slate-600 group-hover:text-slate-700 transition-colors"
                    >
                        <div
                            class="mt-1 w-5 h-5 rounded-full bg-orange-100 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                class="w-3 h-3 text-orange-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="3"
                                    d="M5 13l4 4L19 7"></path></svg
                            >
                        </div>
                        <span class="text-lg"
                            >Sellado de fugas de gas certificadas.</span
                        >
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    // Fade In - Use FROM logic so elements start visible, then animate in
    // This ensures that if JS fails, content remains visible (Progressive Enhancement)

    // Header Reveal
    gsap.from(".service-header", {
        scrollTrigger: {
            trigger: ".service-header",
            start: "top 80%",
        },
        y: 30,
        opacity: 0,
        duration: 1,
        ease: "power3.out",
        clearProps: "all",
    });

    // Cards Reveal
    gsap.from(".service-card", {
        scrollTrigger: {
            trigger: "#servicios",
            start: "top 70%",
        },
        y: 60,
        opacity: 0,
        duration: 0.8,
        stagger: 0.2,
        ease: "power3.out",
        clearProps: "all",
    });
</script>
