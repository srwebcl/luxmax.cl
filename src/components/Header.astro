<style>
    /* Gradient Animation for borders or backgrounds if needed */
    @keyframes gradient-xy {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
</style>

<script>
    import { gsap } from "gsap";

    // Magnetic Button Effect
    const magneticBtns = document.querySelectorAll(".magnetic-btn");
    magneticBtns.forEach((btn) => {
        btn.addEventListener("mousemove", (e) => {
            // @ts-ignore
            const rect = btn.getBoundingClientRect();
            // @ts-ignore
            const x = e.clientX - rect.left - rect.width / 2;
            // @ts-ignore
            const y = e.clientY - rect.top - rect.height / 2;

            gsap.to(btn, {
                x: x * 0.3,
                y: y * 0.3,
                duration: 0.3,
                ease: "power2.out",
            });
        });

        btn.addEventListener("mouseleave", () => {
            gsap.to(btn, {
                x: 0,
                y: 0,
                duration: 0.5,
                ease: "elastic.out(1, 0.5)",
            });
        });
    });

    // Mobile Menu Logic
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    const hamburgerSpans = document.querySelectorAll(".hamburger-icon span");
    const mobileLinks = document.querySelectorAll(".mobile-link");
    let isMenuOpen = false;

    // Timeline for Menu Animation
    const menuTl = gsap.timeline({ paused: true });

    menuTl
        .to(mobileMenu, {
            opacity: 1,
            duration: 0.5,
            pointerEvents: "auto",
            ease: "power2.inOut",
        })
        .from(
            mobileLinks,
            {
                y: 50,
                opacity: 0,
                stagger: 0.1,
                duration: 0.6,
                ease: "back.out(1.7)",
            },
            "-=0.2",
        );

    menuToggle?.addEventListener("click", () => {
        isMenuOpen = !isMenuOpen;
        if (isMenuOpen) {
            menuTl.play();
            // Animate Hamburger to X
            gsap.to(hamburgerSpans[0], {
                rotate: 45,
                y: 8,
                backgroundColor: "#000",
            });
            gsap.to(hamburgerSpans[1], { opacity: 0 });
            gsap.to(hamburgerSpans[2], {
                rotate: -45,
                y: -8,
                backgroundColor: "#000",
            });
            gsap.to(menuToggle, { backgroundColor: "#fff" });
        } else {
            menuTl.reverse();
            // Animate X back to Hamburger
            gsap.to(hamburgerSpans[0], {
                rotate: 0,
                y: 0,
                backgroundColor: "currentColor",
            });
            gsap.to(hamburgerSpans[1], {
                opacity: 1,
                backgroundColor: "currentColor",
            });
            gsap.to(hamburgerSpans[2], {
                rotate: 0,
                y: 0,
                backgroundColor: "currentColor",
            });
            gsap.to(menuToggle, { backgroundColor: "#f1f5f9" });
        }
    });

    // Close menu on link click
    mobileLinks.forEach((link) => {
        link.addEventListener("click", () => {
            if (isMenuOpen) {
                isMenuOpen = false;
                menuTl.reverse();
                gsap.to(hamburgerSpans[0], {
                    rotate: 0,
                    y: 0,
                    backgroundColor: "currentColor",
                });
                gsap.to(hamburgerSpans[1], {
                    opacity: 1,
                    backgroundColor: "currentColor",
                });
                gsap.to(hamburgerSpans[2], {
                    rotate: 0,
                    y: 0,
                    backgroundColor: "currentColor",
                });
                gsap.to(menuToggle, { backgroundColor: "#f1f5f9" });
            }
        });
    });
</script>
