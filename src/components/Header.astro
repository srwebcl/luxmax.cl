            <a href="/" class="flex items-center gap-3 group relative z-50">
                <img
                    src="/logo.svg"
                    alt="Lux Max Logo"
                    class="h-12 w-auto group-hover:scale-105 transition-transform duration-300"
                />
            </a>

            <!-- Desktop Nav -->
            <nav class="hidden md:flex items-center gap-8">
                {
                    ["Inicio", "Servicios", "Marcas", "Contacto"].map(
                        (item) => (
                            <a
                                href={`#${item.toLowerCase()}`}
                                class="nav-link font-medium text-slate-600 hover:text-blue-700 relative py-2"
                            >
                                {item}
                                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full" />
                            </a>
                        ),
                    )
                }
            </nav>

            <!-- Desktop CTA -->
            <div class="hidden md:flex items-center gap-4">
                <a
                    href="tel:+56982539614"
                    onclick="return window.gtag_report_conversion_call(this.href);"
                    class="magnetic-btn bg-slate-900 text-white font-bold py-3 px-6 rounded-xl hover:bg-slate-800 transition-colors shadow-lg shadow-slate-900/20 flex items-center gap-2"
                >
                    <span>ðŸ“ž</span> 9 8253 9614
                </a>
            </div>

            <!-- Mobile Menu Toggle -->
            <button
                id="menu-toggle"
                class="md:hidden relative z-50 w-12 h-12 flex items-center justify-center bg-slate-100 rounded-full text-slate-900"
            >
                <div class="flex flex-col gap-1.5 hamburger-icon">
                    <span
                        class="w-6 h-0.5 bg-current transition-all duration-300 origin-center"
                    ></span>
                    <span
                        class="w-6 h-0.5 bg-current transition-all duration-300 origin-center"
                    ></span>
                    <span
                        class="w-6 h-0.5 bg-current transition-all duration-300 origin-center"
                    ></span>
                </div>
            </button>
        </div>
    </div>

    <!-- Mobile Full Screen Menu -->
