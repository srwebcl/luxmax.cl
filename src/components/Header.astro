<header
    class="fixed top-4 left-0 right-0 z-50 transition-all duration-300 px-4"
    id="main-header"
>
    <div class="container mx-auto max-w-6xl">
        <div
            class="bg-white/80 backdrop-blur-xl border border-white/40 shadow-xl rounded-2xl px-6 h-20 flex items-center justify-between relative z-50"
