---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Brands from "../components/Brands.astro";
import Services from "../components/Services.astro";
import ValueProposition from "../components/ValueProposition.astro";
import ContactForm from "../components/ContactForm.astro";
import WhatsAppWidget from "../components/WhatsAppWidget.astro";

const title =
	"Servicio Técnico Lux Max | Lavadoras, Secadoras y Cocinas en IV Región";
const description =
	"Reparación experta de lavadoras, secadoras, cocinas y encimeras en La Serena, Coquimbo y Ovalle. Atención en 24 horas. Expertos en Samsung, LG, Fensa, Mademsa. ¡Agenda tu visita!";

export const prerender = true;
---

<Layout title={title} description={description}>
	<Header />
	<main>
		<Hero />
		<Brands />
		<Services />
		<ValueProposition />
		<ContactForm />
	</main>
	<Footer />
	<WhatsAppWidget />
</Layout>
